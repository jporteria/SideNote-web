{
  "manifest_version": 3,
  "name": "SideNote",
  "version": "1.0.0",
  "description": "A simple note app",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "notifications" // Add for FCM
  ],
  "icons": {
    "16": "images/note.png",
    "32": "images/note.png",
    "48": "images/note.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open panel",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "*.js",
        "*.css",
        "*.jpg",
        "*.png",
        "images/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' data:; connect-src 'self' https://identitytoolkit.googleapis.com https://firestore.googleapis.com https://apis.google.com; script-src 'self'; script-src-elem 'self' https://apis.google.com; object-src 'none';"
  }
}
