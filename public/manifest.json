{
  "manifest_version": 3,
  "name": "SideNote",
  "version": "1.0.0",
  "description": "A simple note app",
  "permissions": ["sidePanel", "storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://*.googleapis.com/*"
  ],
  "icons": {
    "16": "images/notes.png",
    "32": "images/notes.png",
    "48": "images/notes.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open panel",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "https://apis.google.com/js/api.js",
        "images/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' https://identitytoolkit.googleapis.com https://firestore.googleapis.com https://apis.google.com https://securetoken.googleapis.com; script-src 'self'; script-src-elem 'self' https://apis.google.com; object-src 'none';"
  }
}
